{
  "expo": {
    "name": "Tranquil Fast Coach",
    "slug": "tranquil-fast-coach",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",  // Kept your path; add a 1024x1024 PNG if missing
    "scheme": "tranquilfastcoach",  // Updated for deep linking
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#8B5CF6"  // Updated to purple theme
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tranquilfastcoach.app",  // Updated custom ID
      "infoPlist": {
        "UIBackgroundModes": [
          "background-processing"
        ],
        "UIStatusBarStyle": "UIStatusBarStyleDarkContent"  // Added for iOS dark status bar
      },
      "entitlements": {
        "com": {
          "apple": {
            "developer": {
              "networking": {
                "wifi-info": true
              }
            }
          }
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#8B5CF6"  // Optional: Match splash purple
      },
      "package": "com.tranquilfastcoach.app",  // Updated custom package
      "permissions": [
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://rork.com/"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./local/assets/notification_icon.png",
          "color": "#8B5CF6",  // Optional: Match purple theme
          "defaultChannel": "default",
          "sounds": [
            "./local/assets/notification_sound.wav"
          ],
          "enableBackgroundRemoteNotifications": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}